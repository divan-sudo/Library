@model Library.Models.Book

<h1 class="mb-3">Delete Book</h1>
<hr />
<h4 class="mb-3">Are you sure you want to delete this book?</h4>
<div>
    <dl class="row py-3">
        <dt class="col-md-2">Title</dt>
        <dd class="col-md-10">@Model.Title</dd>
        <dt class="col-md-2">Author</dt>
        <dd class="col-md-10">@Model.Author</dd>
        <dt class="col-md-2">ISBN</dt>
        <dd class="col-md-10">@Model.ISBN</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>