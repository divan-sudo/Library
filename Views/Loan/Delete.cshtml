@model Library.Models.Loan

<h1 class="mb-3">Delete Loan</h1>
<hr />
<h4 class="mb-3">Are you sure you want to delete this loan?</h4>
<div>
    <dl class="row">
        <dt class="col-md-2">Book</dt>
        <dd class="col-md-10">@Model.Book.Title</dd>
        <dt class="col-md-2">User</dt>
        <dd class="col-md-10">@Model.User.Name</dd>
        <dt class="col-md-2">Loan Date</dt>
        <dd class="col-md-10">@Model.LoanDate.ToShortDateString()</dd>
        <dt class="col-md-2">Due Date</dt>
        <dd class="col-md-10">@Model.DueDate.ToShortDateString()</dd>
        <dt class="col-md-2">Return Date</dt>
        <dd class="col-md-10">@(Model.ReturnDate.HasValue ? Model.ReturnDate.Value.ToShortDateString() : "Not returned")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>