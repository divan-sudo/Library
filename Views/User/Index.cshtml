@model IEnumerable<Library.Models.User>

<h1 class="mb-3">Users</h1>
<hr />

@if (!Model.Any())
{
    <p>No users found.</p>
}
else
{
    <a asp-route="userCreate" class="btn btn-primary my-3"><i class="bi bi-plus-circle"></i> Create New User</a>
    <div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Email</h6>
                </div>
                <div class="card-footer">
                    <a asp-route="userEdit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a>
                    <a asp-route="userDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="bi bi-info-circle"></i> Details</a>
                    <a asp-route="userDelete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                </div>
            </div>
        </div>
    }
    </div>
}