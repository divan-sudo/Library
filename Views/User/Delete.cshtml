@model Library.Models.User

<h1 class="mb-3">Delete User</h1>
<hr />

<h4 class="mb-3">Are you sure you want to delete this user?</h4>
<div>
    <dl class="row py-3">
        <dt class="col-md-2">Name</dt>
        <dd class="col-md-10">@Model.Name</dd>
        <dt class="col-md-2">Email</dt>
        <dd class="col-md-10">@Model.Email</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>